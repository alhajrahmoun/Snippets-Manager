<%= form_for @snippet , html: {class: 'form-horizontal'} do |f| %>
	<div class="form-group">
	<%= f.label :title, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	</div>

	<div class="form-group">
	<%= f.label :tag_list, "Tags (separated by commas)",class: 'col-sm-2 control-label' %>
 <div class="col-sm-10">
	 <%= f.autocomplete_field :tag_list,autocomplete_tag_name_snippets_path, :"data-delimiter" => ', ', class: 'form-control' %> 
	 </div>
	 </div>

	 

	<div class="form-group">
		<%= f.label :Language, class: 'col-sm-2 control-label'%> 
		<div class="col-sm-10">
		<%= f.select "mode", 
			   "<option>Choose the snippet language:</option>
			   <option value = 'text/x-csharp' label ='C#'>C#</option>
			   <option value = 'text/x-csrc' label ='C'>C</option>
			   <option value = 'text/x-c++src' label ='C++'>C++</option>
			   <option value = 'text/x-java' label ='Java'>Java</option>		
			   <option value = 'application/x-erb' label ='Embedded Ruby'>Embedded Ruby</option>
				<option value = 'htmlmixed' label ='HTML'>HTML</option>	
				<option label ='javascript'>javascript</option>		
				<option label ='php'>php</option>	
				<option  label ='python'>python</option>	
				<option  label ='ruby'>ruby</option>			
				<option  label ='xml'>xml</option>".html_safe, {},id: 'mode', value: @snippet.mode, class: 'form-control' %>
				</div></p> <span id="modeinfo" style="visibility: hidden;"></span></div>

	<%= content_tag :div, id: "snippet_edit", data: {edit_mode: @snippet.mode} do %>
	<% end %>

	 <p>
		<%= f.label :body, "Snippet body", class: 'col-sm-2 control-label' %>
	    <%= f.text_area :body %>
    </p>
    <div class="col-sm-offset-2 col-sm-10">
	<%= f.submit "submit", class: 'btn btn-default'%>
	</div>
<% end %>